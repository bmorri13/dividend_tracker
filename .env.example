# .env.example - Copy to .env and fill in actual values
# This file shows the structure for environment variables needed by the Next.js application

# =============================================================================
# API Keys
# =============================================================================

# Financial Modeling Prep API Key
# Get your free API key from: https://financialmodelingprep.com/developer/docs
FMP_API_KEY=your_fmp_api_key_here

# =============================================================================
# Supabase Configuration
# =============================================================================

# Supabase JWT Secret (for server-side JWT verification)
# Get from Supabase Dashboard > Settings > API > JWT Secret
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Supabase Project URL (safe for client-side)
# Get from Supabase Dashboard > Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your_project_ref.supabase.co

# Supabase Anonymous Key (safe for client-side)
# Get from Supabase Dashboard > Settings > API > Project API keys > anon public
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (server-side only - keep secret!)
# Get from Supabase Dashboard > Settings > API > Project API keys > service_role
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# Deployment (Optional)
# =============================================================================

# Cloudflare Tunnel Token (for production deployment)
# Get from Cloudflare Zero Trust Dashboard > Access > Tunnels
CF_TOKEN=your_cloudflare_tunnel_token_here

# =============================================================================
# Legacy (No longer needed with Next.js API routes)
# =============================================================================

# Database Connection - No longer needed since we use Supabase client
# DATABASE_URL=postgresql://postgres.your_project_ref:your_password@host:port/postgres

# API URL - No longer needed since API routes are internal
# NEXT_PUBLIC_API_URL=http://localhost:3000